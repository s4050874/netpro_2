public class Browser2 extends javax.swing.JFrame {

    public class Thread_b extends Thread 
    {  JEditorPane jEditorPane1= null;
       JTextArea   jTextArea1  = null;
       String url;
      
       
       
        Thread_b(JEditorPane jEditorPane1,JTextArea jTextArea1,String url)
        {  
            this.jEditorPane1 =jEditorPane1;
            this.jTextArea1   = jTextArea1;
            this.url = url;
            
        }
      @Override
      public void run()
       {  
            String status =null;
            String name = Thread.currentThread().getName();
            status = name+"Start !!!\n";
        try {
            setCursor(Cursor.getPredefinedCursor(Cursor.WAIT_CURSOR));
            jEditorPane1.setPage(url);
            jTextArea1.setText(status);
     
                URL url1=new URL (url);
                URLConnection conn = url1.openConnection();
                Map<String, List<String>> map = conn.getHeaderFields();
                
                status += name+"get page URL "+url+"\n";
                status += name+" Header  \n";
                
                for (Map.Entry<String, List<String>> a : map.entrySet()) {
                    status += a.getKey() +":"+a.getValue()+"\n";
                }

                status += "\n"+name+"Get Response Header By Key ...\n";
                String server = conn.getHeaderField("Server");

                if (server == null) 
                { status += name+"Key 'Server' is not found!";} 
                else 
                { status += name+"Server - " + server + "\n";}
                
                status += name+" Complete\n";
                jTextArea1.setText(status);
         
        } 
        catch (IOException ex) 
        {Logger.getLogger(Browser2.class.getName()).log(Level.SEVERE, null, ex);}
        
         status +="Thread Stop\n";
         jTextArea1.setText(status);
        }    
    }
    
    
    
